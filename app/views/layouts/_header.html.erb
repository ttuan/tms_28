<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("static_pages.framgia"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <% if current_user.supervisor? %>
            <li><%= link_to t("admin.dashboard"), admin_root_path %></li>
            <li><%= link_to t("admin.users"), admin_users_path %></li>            
            <li><%= link_to t("admin.courses"), admin_courses_path %></li>
            <li><%= link_to t("admin.subjects"), admin_subjects_path %></li>
          <% else %>
            <li><%= link_to t("static_pages.home"), root_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("links.profile"), user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t("session.logout"), destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("static_pages.help"), help_path %></li>
          <li><%= link_to t("session.login"), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
