<% provide :title, t("course.course_information") %>

<% unless @user_course.nil? %>
  <div class="row">
    <div class="col-md-9">
      <subject class="col-md-12">
        <h1><%= @course.name %></h1>
        <%= t "course.line" %>
        <%= render @user_subjects %>
      </subject>

      <description class="col-md-12">
        <%= @course.description %>
      </description>

      <activity class="col-md-12">
        <h2><%= t "course.activities_in_course" %></h2> 
        <%= render @activities %>
        <%= will_paginate @activities %>
      </activity>
    </div>

    <listuser class="col-md-3">
      <h2><%= t "course.all_member" %></h2>
      <% @user_courses.each do |user_course| %>
        <% unless user_course.user.supervisor? %>
          <ul>
            <%= link_to gravatar_for(user_course.user,
              size: Settings.avatar_size_small), user_path(user_course.user) %>
            <%= link_to user_course.user.name, user_path(user_course.user) %>
          </ul>
        <% end %>   
      <% end %>
    </listuser>
  </div>
<% else %>
  <h1><%= t "course.none_available" %></h1>
<% end %>
